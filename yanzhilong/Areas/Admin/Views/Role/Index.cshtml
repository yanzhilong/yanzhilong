@{
    ViewBag.Title = "角色管理";
    ViewBag.HeaderTitle = "角色管理";
    ViewBag.ActiveMenuItemSystemName = "Role";
}

@section Head{
    <style type=text/css>

    </style>
}

@section HeadRight{

}

<div class="panel panel-default">
    <div id="grid"></div>
    <script>

        $(document).ready(function () {
            var ReadUrl = "@(Request.Url.GetLeftPart(UriPartial.Authority) + Url.Action("List", "Role"))";
            var UpdateUrl = "@(Request.Url.GetLeftPart(UriPartial.Authority) + Url.Action("Update", "Role"))";
            var CreateUrl = "@(Request.Url.GetLeftPart(UriPartial.Authority) + Url.Action("Create", "Role"))";
            var DestroyUrl = "@(Request.Url.GetLeftPart(UriPartial.Authority) + Url.Action("Delete", "Role"))",

            dataSource = new kendo.data.DataSource({
                transport: {
                    read:  {
                        url: ReadUrl,
                        dataType: "jsonp"
                    },
                    update: {
                        url: UpdateUrl,
                        dataType: "jsonp"
                    },
                    destroy: {
                        url: DestroyUrl,
                        dataType: "jsonp"
                    },
                    create: {
                        url: CreateUrl,
                        dataType: "jsonp"
                    },
                    parameterMap: function (options, operation) {

                        if (operation !== "read" && options.models) {
                            return {models: kendo.stringify(options.models)};
                        }
                    }
                },
                batch: true,
                pageSize: 20,
                schema: {
                    model: {
                        id: "Id",
                        fields: {
                            Id: { editable: false, nullable: true },
                            Name: { validation: { required: true } },
                            SystemName: { validation: { required: true } }
                        }
                    }
                }
            });
            dataSource.bind("error", dataSource_error);

            function dataSource_error(e) {
                var responsejson = e.xhr.responseText;
                alert(e.status);
            }

            $("#grid").kendoGrid({
                dataSource: dataSource,
                sortable: true,
                pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5
                },
                toolbar: ["create"],
                columns: [
                    { field: "Name", title: "角色名称" },
                    { field: "SystemName", title: "配置名称" },
                    { command: ["edit", "destroy", { name: "权限配置", click: Details }], title: "&nbsp;", width: "260px" }],
                editable: "popup"
            });
        });

        //显示详情
        function Details(e) {
            e.preventDefault();
            var tr = $(e.target).closest("tr"); // get the current table row (tr)
            var data = this.dataItem(tr);
            var Id = data.Id;
            //alert("Details for: " + data.Name);
            window.location.href = "@Url.Action("Details")" + "/" + Id;
        }

    </script>
</div>