@{
    ViewBag.Title = "京东宝贝管理";
    ViewBag.HeaderTitle = "京东宝贝管理";
    ViewBag.ActiveMenuItemSystemName = "JdItem";
}

@section Head{
    <style type=text/css>

    </style>
}

@section HeadRight{

}

<div class="panel panel-default">
    <div id="grid"></div>
    <script>

        $(document).ready(function () {
            var ReadUrl = "@(Request.Url.GetLeftPart(UriPartial.Authority) + Url.Action("List", "JdItem"))";
            var UpdateUrl = "@(Request.Url.GetLeftPart(UriPartial.Authority) + Url.Action("Update", "JdItem"))";
            var CreateUrl = "@(Request.Url.GetLeftPart(UriPartial.Authority) + Url.Action("Create", "JdItem"))";
            var DestroyUrl = "@(Request.Url.GetLeftPart(UriPartial.Authority) + Url.Action("Delete", "JdItem"))",

            dataSource = new kendo.data.DataSource({
                transport: {
                    read:  {
                        url: ReadUrl,
                        dataType: "jsonp"
                    },
                    update: {
                        url: UpdateUrl,

                        dataType: "jsonp"
                    },
                    destroy: {
                        url: DestroyUrl,
                        type: "post",
                        dataType: "jsonp"
                    },
                    create: {
                        url: CreateUrl,
                        type: "post",
                        dataType: "jsonp"
                    },
                    parameterMap: function (options, operation) {

                        if (operation !== "read" && options.models) {
                            return {models: kendo.stringify(options.models)};
                        }
                    }
                },
                batch: true,
                pageSize: 20,
                schema: {
                    errors: "Errors",//指定错误字段
                    model: {
                        id: "Id",
                        fields: {
                            Id: { editable: false, nullable: true },
                            Url: { validation: { required: true } },
                            JNumber: { validation: { required: true } },
                            CreateAt: { editable: false, nullable: true, type: "date"}
                        }
                    }
                },
                //指定错误处理方法
                error: function (e) {
                    display_kendoui_grid_error(e);//显示错误
                    this.cancelChanges();//取消修改
                }
            });
            dataSource.bind("error", dataSource_error);

            function display_kendoui_grid_error(e) {
                if (e.errors) {
                    if ((typeof e.errors) == 'string') {
                        //显示单条的错误信息
                        alert(e.errors);
                    } else {
                        //显示验证错误
                        var message = "发生了以下错误:";
                        //create a message containing all errors.
                        $.each(e.errors, function (key, value) {
                            if (value.errors) {
                                message += "\n";
                                message += value.errors.join("\n");
                            }
                        });
                        //display the message
                        alert(message);
                    }
                    //ignore empty error
                } else if (e.errorThrown) {
                    alert('有错误发生了!!!');
                }
            }

            function dataSource_error(e) {
                var responsejson = e.xhr.responseText;
                alert(e.status);
            }

            $("#grid").kendoGrid({
                dataSource: dataSource,
                sortable: true,
                pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5
                },
                toolbar: ["create"],
                columns: [
                    { field: "Url", title: "搜鞋网址", template: "<a href=\"#:data.Url#\" target=\"__blank\">#:data.Url#</a>" },
                    { field: "JNumber", title: "商家编码" },
                    { field: "CreateAt", title: "创建时间", format: "{0: yyyy年MM月dd日 HH:mm:ss}"  },
                    { command: ["edit", "destroy"], title: "&nbsp;", width: "250px" }],
                editable: "popup"
            });
        });

    </script>
</div>