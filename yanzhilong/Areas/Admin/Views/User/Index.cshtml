@model UserModel
@{
    ViewBag.Title = "用户管理";
    ViewBag.HeaderTitle = "用户管理";
    ViewBag.ActiveMenuItemSystemName = "UserManage";
}

@section Head{
    <style type=text/css>
    </style>
}

@section HeadRight{

}

<div class="panel panel-default">
    <div id="grid"></div>
    <script>

        $(document).ready(function () {
            var ReadUrl = "@(Request.Url.GetLeftPart(UriPartial.Authority) + Url.Action("List", "User"))";

            dataSource = new kendo.data.DataSource({
                transport: {
                    read:  {
                        url: ReadUrl,
                        dataType: "jsonp"
                    },
                    parameterMap: function (options, operation) {

                        if (operation !== "read" && options.models) {
                            return {models: kendo.stringify(options.models)};
                        }
                    }
                },
                batch: true,
                pageSize: 20,
                schema: {
                    model: {
                        id: "Id",
                        fields: {
                            Id: { editable: false, nullable: true },
                            UserName: { type: "string" },
                            Email: { type: "string" },
                            PhoneNumber: { type: "string" },
                            DisplayName: { type: "string" },
                            CreateDate: { type: "date" },
                            LastLoginDateUtc: { type: "date" }
                        }
                    }
                }
            });
            dataSource.bind("error", dataSource_error);

            function dataSource_error(e) {
                var responsejson = e.xhr.responseText;
                alert(e.status);
            }

            $("#grid").kendoGrid({
                dataSource: dataSource,
                sortable: true,
                pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5
                },
                columns: [
                    { field: "UserName", title: "用户名" },
                    { field: "Email", title: "邮箱" },
                    { field: "PhoneNumber", title: "手机" },
                    { field: "DisplayName", title: "昵称" },
                    { field: "CreateDate", title: "注册时间", format: "{0: yyyy-MM-dd}" },
                    { field: "LastLoginDateUtc", title: "最后登陆", format: "{0: yyyy-MM-dd}" },
                    { command: [{ name: "角色配置", click: Details }], title: "&nbsp;", width: "100px" }],
                editable: "popup"
            });
        });

        //显示详情
        function Details(e) {
            e.preventDefault();
            var tr = $(e.target).closest("tr"); // get the current table row (tr)
            var data = this.dataItem(tr);
            var Id = data.Id;
            //alert("Details for: " + data.Name);
            window.location.href = "@Url.Action("Role")" + "/" + Id;
        }

    </script>
</div>