@model IEnumerable<yanzhilong.Models.ResourceStarModel>
@{
    ViewBag.sidebar = "推荐管理";
    ViewBag.Title = "推荐管理";
    PageModel pagemode = ViewBag.pagemodel as PageModel;
}

<h1 class="page-header">推荐管理</h1>
@Html.ActionLink("创建新推荐", "Create", "ResourceStar") @Html.ActionLink("首页", "Index", "Home", new { area = "", target = "_blank"})
<div class="table-responsive">
    <table class="table table-striped table-manage">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ResourceID)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ResourceType)
                </th>

                <th>
                    操作
                </th>

            </tr>

        </thead>
        <tbody>


            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResourceID)
                    </td>

                    <td>
                        @{
                            switch (item.ResourceType)
                            {
                                case ResourceType.ARTICLE:
                                    @:文章
                                                break;
                                case ResourceType.PRODUCT:
                                    @:产品
                                                break;
                                case ResourceType.TUTORIALS:
                                    @:教程
                                                break;
                            }
                        }
                    </td>
                    <td>
                        @Html.ActionLink("删除", "Delete", "ResourceStar", new { id = item.ResourceStarID }, null)
                    </td>
                </tr>
             }
        </tbody>
    </table>
</div>

<div class="container">
    <!--  分页视图 -->
    @Html.Partial("Paging", pagemode)
</div>