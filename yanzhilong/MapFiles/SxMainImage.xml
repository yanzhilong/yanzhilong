<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="SxMainImage" xmlns="http://ibatis.apache.org/mapping"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >

  <alias>
    <typeAlias alias="SxMainImage" type="yanzhilong.Domain.SxMainImage,yanzhilong" />   
  </alias>

  <resultMaps>
    <resultMap id="SelectAllResult" class="SxMainImage">
       <result property="Id" column="Id" dbType="VARCHAR" type="string" />
       <result property="Url" column="Url" dbType="VARCHAR" type="string" />
       <result property="Sort" column="Sort" dbType="INT" type="int" />
       <result property="sxShoe.Id" column="ShoeId" dbType="VARCHAR" type="string" />
    </resultMap>     
  </resultMaps>

  <statements>
    <select id="SelectAllSxMainImages" resultMap="SelectAllResult">
      <![CDATA[  
      SELECT 
      Id,
      Url,
      Sort,
      ShoeId
      FROM sx_mainimage
      ]]>
    </select>

    <select id="SelectSxMainImageByCondition" parameterClass="SxMainImage" resultMap="SelectAllResult" extends="SelectAllSxMainImages">
      <dynamic prepend="WHERE">
      
       <isNotEmpty prepend="AND" property="Id">
          <![CDATA[  
           Id = #Id#
            ]]>
        </isNotEmpty>
        
       <isNotEmpty prepend="AND" property="Url">
          <![CDATA[  
           Url = #Url#
            ]]>
        </isNotEmpty>
        
       <isGreaterThan prepend="AND" compareValue="-1" property="Sort">
          <![CDATA[  
           Sort = #Sort#
            ]]>
        </isGreaterThan>
        
       <isNotEmpty prepend="AND" property="sxShoe.Id">
          <![CDATA[  
           ShoeId = #sxShoe.Id#
            ]]>
        </isNotEmpty>
        
      </dynamic>
    </select>
    
    <insert id="InsertSxMainImage" parameterClass="SxMainImage">
      <![CDATA[ 
      INSERT INTO sx_mainimage
      (
      Id,
      Url,
      Sort,
      ShoeId
      )
      VALUES
      (
      #Id#,
      #Url#,
      #Sort#,
      #sxShoe.Id#
      )
      ]]>
    </insert>
    
    <update id="UpdateSxMainImage" parameterClass="SxMainImage">
      <![CDATA[           
      UPDATE sx_mainimage SET   
      Id=#Id#,
      Url=#Url#,
      Sort=#Sort#,
      ShoeId=#sxShoe.Id#
      WHERE Id = #Id#
      ]]>
    </update>
   
    <delete id="DeleteSxMainImage" parameterClass="SxMainImage">
      <![CDATA[
      Delete From sx_mainimage Where Id = #Id#
      ]]>
    </delete>

  </statements>
</sqlMap>
