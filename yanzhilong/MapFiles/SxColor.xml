<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="SxColor" xmlns="http://ibatis.apache.org/mapping"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >

  <alias>
    <typeAlias alias="SxColor" type="yanzhilong.Domain.SxColor,yanzhilong" />   
  </alias>

  <resultMaps>
    <resultMap id="SelectAllResult" class="SxColor">
       <result property="Id" column="Id" dbType="VARCHAR" type="string" />
       <result property="Name" column="Name" dbType="VARCHAR" type="string" />
       <result property="sxShoe.Id" column="ShoeId" dbType="VARCHAR" type="string" />
    </resultMap>     
  </resultMaps>

  <statements>
    <select id="SelectAllSxColors" resultMap="SelectAllResult">
      <![CDATA[  
      SELECT 
      Id,
      Name,
      ShoeId
      FROM sx_color
      ]]>
    </select>

    <select id="SelectSxColorByCondition" parameterClass="SxColor" resultMap="SelectAllResult" extends="SelectAllSxColors">
      <dynamic prepend="WHERE">
      
       <isNotEmpty prepend="AND" property="Id">
          <![CDATA[  
           Id = #Id#
            ]]>
        </isNotEmpty>
        
       <isNotEmpty prepend="AND" property="Name">
          <![CDATA[  
           Name = #Name#
            ]]>
        </isNotEmpty>
        
       <isNotEmpty prepend="AND" property="sxShoe.Id">
          <![CDATA[  
           ShoeId = #sxShoe.Id#
            ]]>
        </isNotEmpty>
        
      </dynamic>
    </select>
    
    <insert id="InsertSxColor" parameterClass="SxColor">
      <![CDATA[ 
      INSERT INTO sx_color
      (
      Id,
      Name,
      ShoeId
      )
      VALUES
      (
      #Id#,
      #Name#,
      #sxShoe.Id#
      )
      ]]>
    </insert>
    
    <update id="UpdateSxColor" parameterClass="SxColor">
      <![CDATA[           
      UPDATE sx_color SET   
      Id=#Id#,
      Name=#Name#,
      ShoeId=#sxShoe.Id#
      WHERE Id = #Id#
      ]]>
    </update>
   
    <delete id="DeleteSxColor" parameterClass="SxColor">
      <![CDATA[
      Delete From sx_color Where Id = #Id#
      ]]>
    </delete>

  </statements>
</sqlMap>
