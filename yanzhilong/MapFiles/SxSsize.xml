<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="SxSsize" xmlns="http://ibatis.apache.org/mapping"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >

  <alias>
    <typeAlias alias="SxSsize" type="yanzhilong.Domain.SxSsize,yanzhilong" />   
  </alias>

  <resultMaps>
    <resultMap id="SelectAllResult" class="SxSsize">
       <result property="Id" column="Id" dbType="VARCHAR" type="string" />
       <result property="Num" column="Num" dbType="INT" type="int" />
       <result property="sxShoe.Id" column="ShoeId" dbType="VARCHAR" type="string" />
    </resultMap>     
  </resultMaps>

  <statements>
    <select id="SelectAllSxSsizes" resultMap="SelectAllResult">
      <![CDATA[  
      SELECT 
      Id,
      Num,
      ShoeId
      FROM sx_size
      ]]>
    </select>

    <select id="SelectSxSsizeByCondition" parameterClass="SxSsize" resultMap="SelectAllResult" extends="SelectAllSxSsizes">
      <dynamic prepend="WHERE">
      
       <isNotEmpty prepend="AND" property="Id">
          <![CDATA[  
           Id = #Id#
            ]]>
        </isNotEmpty>
        
       <isGreaterThan prepend="AND" compareValue="-1" property="Num">
          <![CDATA[  
           Num = #Num#
            ]]>
        </isGreaterThan>
        
       <isNotEmpty prepend="AND" property="sxShoe.Id">
          <![CDATA[  
           ShoeId = #sxShoe.Id#
            ]]>
        </isNotEmpty>
        
      </dynamic>
    </select>
    
    <insert id="InsertSxSsize" parameterClass="SxSsize">
      <![CDATA[ 
      INSERT INTO sx_size
      (
      Id,
      Num,
      ShoeId
      )
      VALUES
      (
      #Id#,
      #Num#,
      #sxShoe.Id#
      )
      ]]>
    </insert>
    
    <update id="UpdateSxSsize" parameterClass="SxSsize">
      <![CDATA[           
      UPDATE sx_size SET   
      Id=#Id#,
      Num=#Num#,
      ShoeId=#sxShoe.Id#
      WHERE Id = #Id#
      ]]>
    </update>
   
    <delete id="DeleteSxSsize" parameterClass="SxSsize">
      <![CDATA[
      Delete From sx_size Where Id = #Id#
      ]]>
    </delete>

  </statements>
</sqlMap>
