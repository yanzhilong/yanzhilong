<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="PermissionRecord" xmlns="http://ibatis.apache.org/mapping"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- 设置别名，用于底下指定类型的时候不需要全全类名(包括长的空间名 ),最后一个参数是项目的命名空间名 -->
  <alias>
    <typeAlias alias="PermissionRecord" type="yanzhilong.Domain.PermissionRecord, yanzhilong"/>

  </alias>

  <!-- 数据库到实体类的映射表 -->
  <resultMaps>

    <!-- 数据库的全部字段到实体类的映射 -->
    <resultMap id="PermissionRecordResult" class="PermissionRecord">
      <result property="Id" column="Id" dbType="char" type="string" />
      <result property="Name" column="Name" dbType="varchar" type="string" />
      <result property="SystemName" column="SystemName" dbType="varchar" type="string" />

    </resultMap>

  </resultMaps>

  <!-- 声明执行语句列表，可以包含多个<select>、<insert>、<update>、<delete>节点 -->
  <!-- 为了避免SQL语句出现的'<'和'>'会和配置文件的<>冲突，所以SQL语句都写在<![CDATA[  与  ]]>之间 -->
  <statements>

    <!-- 添加句子SQL语句 -->
    <insert id="InsertPermissionRecord" parameterClass="PermissionRecord">
      <![CDATA[  
      insert into PermissionRecord  
      (Id,Name,SystemName)  
      values  
      (#Id#,#Name#,#SystemName#)  
      ]]>
    </insert>

    <!-- parameterClass表示传入的参数为int -->
    <delete id="DeletePermissionRecord" parameterClass="PermissionRecord">
      <![CDATA[
          delete from PermissionRecord  
          where
          Id = #Id#  
          ]]>
    </delete>

    <!-- #UserName# 表示传入实体类参数的属性，表示实体的的属性 -->
    <update id="UpdatePermissionRecord" parameterClass="PermissionRecord">
      <![CDATA[  
          UPDATE PermissionRecord SET  
          Name=#Name#,
          SystemName=#SystemName#
          WHERE  
          Id=#Id#
          ]]>
    </update>

    <select id="SelectPermissionRecord" parameterClass="PermissionRecord" resultMap="PermissionRecordResult">
      <![CDATA[  
          SELECT Id
          ,Name
          ,SystemName
          FROM PermissionRecord  
          ]]>
    </select>
    
    <!--resultMap="SelectAllResult"表示数据库字段与实体类的映射关系和上面配置的SelectAllResult一样-->
    <select id="SelectPermissionRecordByCondition" parameterClass="PermissionRecord" resultMap="PermissionRecordResult" extends="SelectPermissionRecord">
      <dynamic prepend="WHERE">
        <isNotEmpty prepend="AND" property="Id">
          <![CDATA[  
           Id = #Id#
            ]]>
        </isNotEmpty>
        <isNotEmpty prepend="AND" property="Name">
          <![CDATA[  
           Name = #Name#
            ]]>
        </isNotEmpty>
        <isNotEmpty prepend="AND" property="SystemName">
          <![CDATA[  
           SystemName = #SystemName#
            ]]>
        </isNotEmpty>

      </dynamic>
    </select>

  </statements>

</sqlMap>
