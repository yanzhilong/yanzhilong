<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="SxProperty" xmlns="http://ibatis.apache.org/mapping"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >

  <alias>
    <typeAlias alias="SxProperty" type="yanzhilong.Domain.SxProperty,yanzhilong" />   
  </alias>

  <resultMaps>
    <resultMap id="SelectAllResult" class="SxProperty">
       <result property="Id" column="Id" dbType="VARCHAR" type="string" />
       <result property="Name" column="Name" dbType="VARCHAR" type="string" />
       <result property="Value" column="Value" dbType="VARCHAR" type="string" />
       <result property="sxShoe.Id" column="ShoeId" dbType="VARCHAR" type="string" />
    </resultMap>     
  </resultMaps>

  <statements>
    <select id="SelectAllSxPropertys" resultMap="SelectAllResult">
      <![CDATA[  
      SELECT 
      Id,
      Name,
      Value,
      ShoeId
      FROM sx_property
      ]]>
    </select>

    <select id="SelectSxPropertyByCondition" parameterClass="SxProperty" resultMap="SelectAllResult" extends="SelectAllSxPropertys">
      <dynamic prepend="WHERE">
      
       <isNotEmpty prepend="AND" property="Id">
          <![CDATA[  
           Id = #Id#
            ]]>
        </isNotEmpty>
        
       <isNotEmpty prepend="AND" property="Name">
          <![CDATA[  
           Name = #Name#
            ]]>
        </isNotEmpty>
        
       <isNotEmpty prepend="AND" property="Value">
          <![CDATA[  
           Value = #Value#
            ]]>
        </isNotEmpty>
        
       <isNotEmpty prepend="AND" property="sxShoe.Id">
          <![CDATA[  
           ShoeId = #sxShoe.Id#
            ]]>
        </isNotEmpty>
        
      </dynamic>
    </select>
    
    <insert id="InsertSxProperty" parameterClass="SxProperty">
      <![CDATA[ 
      INSERT INTO sx_property
      (
      Id,
      Name,
      Value,
      ShoeId
      )
      VALUES
      (
      #Id#,
      #Name#,
      #Value#,
      #sxShoe.Id#
      )
      ]]>
    </insert>
    
    <update id="UpdateSxProperty" parameterClass="SxProperty">
      <![CDATA[           
      UPDATE sx_property SET   
      Id=#Id#,
      Name=#Name#,
      Value=#Value#,
      ShoeId=#sxShoe.Id#
      WHERE Id = #Id#
      ]]>
    </update>
   
    <delete id="DeleteSxProperty" parameterClass="SxProperty">
      <![CDATA[
      Delete From sx_property Where Id = #Id#
      ]]>
    </delete>

  </statements>
</sqlMap>
