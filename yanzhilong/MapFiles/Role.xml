<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="Role" xmlns="http://ibatis.apache.org/mapping"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  
  <!-- 设置别名，用于底下指定类型的时候不需要全全类名(包括长的空间名 ),最后一个参数是项目的命名空间名 -->
  <alias>
    <typeAlias alias="Role" type="yanzhilong.Domain.Role, yanzhilong"/>
    
  </alias>

  <!-- 数据库到实体类的映射表 -->
  <resultMaps>
    
    <!-- 数据库的全部字段到实体类的映射 -->
    <resultMap id="RoleResult" class="Role">
      <result property="Id" column="Id" dbType="char" type="string" />
      <result property="Name" column="Name" dbType="varchar" type="string" />
      <result property="SystemName" column="SystemName" dbType="varchar" type="string" />
      
    </resultMap>

    <!-- 新增的映射文件，用于引用 -->
    <resultMap id="RoleExtend" class="Role">
      <result property="Id" column="RoleId" dbType="VARCHAR" type="string" />
      <result property="Name" column="RoleName" dbType="VARCHAR" type="string" />
      <result property="SystemName" column="RoleSystemName" dbType="VARCHAR" type="string" />
    </resultMap>
    
  </resultMaps>

  <!-- 声明执行语句列表，可以包含多个<select>、<insert>、<update>、<delete>节点 -->
  <!-- 为了避免SQL语句出现的'<'和'>'会和配置文件的<>冲突，所以SQL语句都写在<![CDATA[  与  ]]>之间 -->
  <statements>

    <!-- 添加句子SQL语句 -->
    <insert id="InsertRole" parameterClass="Role" >
      <![CDATA[  
      insert into Role  
      (Id,Name,SystemName)  
      values  
      (#Id#,#Name#,#SystemName#)  
      ]]>
    </insert>

    <!-- parameterClass表示传入的参数为int -->
    <delete id="DeleteRole" parameterClass="Role">
      <![CDATA[
          delete from Role  
          where
          Id = #Id#  
          ]]>
    </delete>
    
    <!-- #UserName# 表示传入实体类参数的属性，表示实体的的属性 -->
    <update id="UpdateRole" parameterClass="Role">
      <![CDATA[  
          UPDATE Role SET  
          Name=#Name#,
          SystemName=#SystemName#
          WHERE  
          Id=#Id#
          ]]>
    </update>

    <select id="SelectRole" parameterClass="Role" resultMap="RoleResult">
      <![CDATA[  
          SELECT Id
          ,Name
          ,SystemName
          FROM Role  
          ]]>
    </select>
    
    <!--resultMap="SelectAllResult"表示数据库字段与实体类的映射关系和上面配置的SelectAllResult一样-->
    <select id="SelectRoleByCondition" parameterClass="Role" resultMap="RoleResult" extends="SelectRole">
      <dynamic prepend="WHERE">
        <isNotEmpty prepend="AND" property="Id">
          <![CDATA[  
           Id = #Id#
            ]]>
        </isNotEmpty>
        <isNotEmpty prepend="AND" property="Name">
          <![CDATA[  
           Name = #Name#
            ]]>
        </isNotEmpty>
        <isNotEmpty prepend="AND" property="SystemName">
          <![CDATA[  
           SystemName = #SystemName#
            ]]>
        </isNotEmpty>
        
      </dynamic>
    </select>

  </statements>

</sqlMap>
