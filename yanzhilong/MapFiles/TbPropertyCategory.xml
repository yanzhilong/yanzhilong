<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="TbPropertyCategory" xmlns="http://ibatis.apache.org/mapping"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >

  <alias>
    <typeAlias alias="TbPropertyCategory" type="yanzhilong.Domain.TbPropertyCategory,yanzhilong" />   
  </alias>

  <resultMaps>
    <resultMap id="SelectAllResult" class="TbPropertyCategory">
       <result property="Id" column="Id" dbType="VARCHAR" type="string" />
       <result property="Name" column="Name" dbType="VARCHAR" type="string" />
       <result property="Value" column="Value" dbType="VARCHAR" type="string" />
    </resultMap>     
  </resultMaps>

  <statements>
    <select id="SelectAllTbPropertyCategorys" resultMap="SelectAllResult">
      <![CDATA[  
      SELECT 
      Id,
      Name,
      Value
      FROM tb_propertycategory
      ]]>
    </select>

    <select id="SelectTbPropertyCategoryByCondition" parameterClass="TbPropertyCategory" resultMap="SelectAllResult" extends="SelectAllTbPropertyCategorys">
      <dynamic prepend="WHERE">
      
       <isNotEmpty prepend="AND" property="Id">
          <![CDATA[  
           Id = #Id#
            ]]>
        </isNotEmpty>
        
       <isNotEmpty prepend="AND" property="Name">
          <![CDATA[  
           Name = #Name#
            ]]>
        </isNotEmpty>
        
       <isNotEmpty prepend="AND" property="Value">
          <![CDATA[  
           Value = #Value#
            ]]>
        </isNotEmpty>
        
      </dynamic>
    </select>
    
    <insert id="InsertTbPropertyCategory" parameterClass="TbPropertyCategory">
      <![CDATA[ 
      INSERT INTO tb_propertycategory
      (
      Id,
      Name,
      Value
      )
      VALUES
      (
      #Id#,
      #Name#,
      #Value#
      )
      ]]>
    </insert>
    
    <update id="UpdateTbPropertyCategory" parameterClass="TbPropertyCategory">
      <![CDATA[           
      UPDATE tb_propertycategory SET   
      Id=#Id#,
      Name=#Name#,
      Value=#Value#
      WHERE Id = #Id#
      ]]>
    </update>
   
    <delete id="DeleteTbPropertyCategory" parameterClass="TbPropertyCategory">
      <![CDATA[
      Delete From tb_propertycategory Where Id = #Id#
      ]]>
    </delete>

  </statements>
</sqlMap>
