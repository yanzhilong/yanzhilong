<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="TbProperty" xmlns="http://ibatis.apache.org/mapping"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >

  <alias>
    <typeAlias alias="TbProperty" type="yanzhilong.Domain.TbProperty,yanzhilong" />   
  </alias>

  <resultMaps>
    <resultMap id="SelectAllResult" class="TbProperty">
       <result property="Id" column="Id" dbType="VARCHAR" type="string" />
       <result property="Name" column="Name" dbType="VARCHAR" type="string" />
       <result property="ValueKey" column="ValueKey" dbType="VARCHAR" type="string" />
       <result property="tbPropertyCategory.Id" column="TbPropertyCategoryId" dbType="VARCHAR" type="string" />
    </resultMap>     
  </resultMaps>

  <statements>
    <select id="SelectAllTbPropertys" resultMap="SelectAllResult">
      <![CDATA[  
      SELECT 
      Id,
      Name,
      ValueKey,
      TbPropertyCategoryId
      FROM tb_property
      ]]>
    </select>

    <select id="SelectTbPropertyByCondition" parameterClass="TbProperty" resultMap="SelectAllResult" extends="SelectAllTbPropertys">
      <dynamic prepend="WHERE">
      
       <isNotEmpty prepend="AND" property="Id">
          <![CDATA[  
           Id = #Id#
            ]]>
        </isNotEmpty>
        
       <isNotEmpty prepend="AND" property="Name">
          <![CDATA[  
           Name = #Name#
            ]]>
        </isNotEmpty>
        
       <isNotEmpty prepend="AND" property="ValueKey">
          <![CDATA[  
           ValueKey = #ValueKey#
            ]]>
        </isNotEmpty>
        
       <isNotEmpty prepend="AND" property="tbPropertyCategory.Id">
          <![CDATA[  
           TbPropertyCategoryId = #tbPropertyCategory.Id#
            ]]>
        </isNotEmpty>
        
      </dynamic>
    </select>

    <select id="SelectTbPropertyByCondition1" parameterClass="TbProperty" resultMap="SelectAllResult" extends="SelectAllTbPropertys">
      <![CDATA[ 
      Where Name = #Name# and ValueKey = #ValueKey# and TbPropertyCategoryId = "00000000-0000-0000-0000-000000000000"
      ]]>
    </select>
    
    <insert id="InsertTbProperty" parameterClass="TbProperty">
      <![CDATA[ 
      INSERT INTO tb_property
      (
      Id,
      Name,
      ValueKey,
      TbPropertyCategoryId
      )
      VALUES
      (
      #Id#,
      #Name#,
      #ValueKey#,
      #tbPropertyCategory.Id#
      )
      ]]>
    </insert>
    
    <update id="UpdateTbProperty" parameterClass="TbProperty">
      <![CDATA[           
      UPDATE tb_property SET   
      Id=#Id#,
      Name=#Name#,
      ValueKey=#ValueKey#,
      TbPropertyCategoryId=#tbPropertyCategory.Id#
      WHERE Id = #Id#
      ]]>
    </update>
   
    <delete id="DeleteTbProperty" parameterClass="TbProperty">
      <![CDATA[
      Delete From tb_property Where Id = #Id#
      ]]>
    </delete>

  </statements>
</sqlMap>
