<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="JdItem" xmlns="http://ibatis.apache.org/mapping"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >

  <alias>
    <typeAlias alias="JdItem" type="yanzhilong.Domain.JdItem,yanzhilong" />
  </alias>

  <resultMaps>
    <resultMap id="SelectAllResult" class="JdItem">
      <result property="Id" column="Id" dbType="VARCHAR" type="string" />
      <result property="Url" column="Url" dbType="VARCHAR" type="string" />
      <result property="JNumber" column="JNumber" dbType="VARCHAR" type="string" />
      <result property="CreateAt" column="CreateAt" dbType="DateTime" type="DateTime" />
    </resultMap>
  </resultMaps>

  <statements>
    <select id="SelectAllJdItems" resultMap="SelectAllResult">
      <![CDATA[  
      SELECT 
      Id,
      Url,
      JNumber,
      CreateAt
      FROM jd_item
      ]]>
    </select>

    <select id="SelectJdItemByCondition" parameterClass="JdItem" resultMap="SelectAllResult" extends="SelectAllJdItems">
      <dynamic prepend="WHERE">

        <isNotEmpty prepend="AND" property="Id">
          <![CDATA[  
           Id = #Id#
            ]]>
        </isNotEmpty>

        <isNotEmpty prepend="AND" property="Url">
          <![CDATA[  
           Url = #Url#
            ]]>
        </isNotEmpty>

        <isNotEmpty prepend="AND" property="JNumber">
          <![CDATA[  
           JNumber = #JNumber#
            ]]>
        </isNotEmpty>

      </dynamic>
    </select>

    <insert id="InsertJdItem" parameterClass="JdItem">
      <![CDATA[ 
      INSERT INTO jd_item
      (
      Id,
      Url,
      JNumber,
      CreateAt
      )
      VALUES
      (
      #Id#,
      #Url#,
      #JNumber#,
      #CreateAt#
      )
      ]]>
    </insert>

    <update id="UpdateJdItem" parameterClass="JdItem">
      <![CDATA[           
      UPDATE jd_item SET   
      Url=#Url#,
      JNumber=#JNumber#,
      CreateAt=#CreateAt#
      WHERE Id = #Id#
      ]]>
    </update>

    <delete id="DeleteJdItem" parameterClass="JdItem">
      <![CDATA[
      Delete From jd_item Where Id = #Id#
      ]]>
    </delete>

  </statements>
</sqlMap>
