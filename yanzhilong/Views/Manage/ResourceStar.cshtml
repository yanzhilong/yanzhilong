@model yanzhilong.Models.ResourceStarViewModel
@{var headerMetadata = Model.resourceStars.FirstOrDefault();}

@{
    //Layout = null;
    ViewBag.Title = "文章分类";
    ViewBag.NavActive = 1;//设置导航激活
}

    <h1 class="page-header">文章分类管理</h1>
    @Html.ActionLink("创建新分类", "Create","Tutorials")
    <div class="table-responsive">
        <table class="table table-striped table-manage">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => headerMetadata.ResourceStarID)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => headerMetadata.ResourceID)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => headerMetadata.ResourceType)
                    </th>

                    <th>
                        操作
                    </th>

                </tr>

            </thead>
            <tbody>


                @foreach (var item in Model.resourceStars)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ResourceStarID)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.ResourceID)
                        </td>

                        <td>
                            @{
                                switch (item.ResourceType)
                                {
                                    case ResourceType.ARTICLE:
                                        @:文章
                                                break;
                                    case ResourceType.PRODUCT:
                                        @:产品
                                                break;
                                    case ResourceType.TUTORIALS:
                                        @:教程
                                                break;
                                }
                            }
                        </td>
                        <td>
                            @Html.ActionLink("编辑", "Edit", "ResourceStar", new { id = item.ResourceStarID }, new { target = "_blank" }) |
                            @Html.ActionLink("详情", "Details", "ResourceStar", new { id = item.ResourceStarID }, new { target = "_blank" }) |
                            @Html.ActionLink("删除", "Delete", "ResourceStar", new { id = item.ResourceStarID }, null)
                        </td>
                    </tr>
                }

                @*@foreach (var item in Model.categorys)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td>
                            @Html.ActionLink("编辑", "Edit", "Category", new { id = item.CategoryID }, new { target = "_blank" }) |
                            @Html.ActionLink("详情", "Details", "Category", new { id = item.CategoryID }, new { target = "_blank" }) |
                            @Html.ActionLink("删除", "Delete", "Category", new { id = item.CategoryID }, null)
                        </td>
                    </tr>
                }*@
            </tbody>
        </table>
    </div>

    <div class="container">
        <!--  分页视图 -->
        @Html.Action("Index", "Paging", new { pvm = Model.pvm })
    </div>