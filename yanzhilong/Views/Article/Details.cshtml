@model yanzhilong.Models.ArticleModel
@{
    ArticleModel PreArticle = ViewBag.PreArticle;
    ArticleModel NextArticle = ViewBag.NextArticle;

    ViewBag.Title = Model.Title;
    ViewBag.NavActive = 1;//设置导航激活
}

<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <div class="blog-post">
                <h2 class="blog-post-title">@Model.Title</h2>
                <p classblog-post-meta">2017-02-27 17:19 作者:<a href="#">@Model.DisplayName</a></p>
                @Html.Raw(HttpUtility.HtmlDecode(@Model.Content))
            </div>
            <hr />
            <!--<nav>
                <ul class="pager">
                    <li><a href="#"><< Python对象的使用</a></li>
                    <li><a href="#">Python中字典的使用  >></a></li>
                </ul>
            </nav>-->

            <div class="acticle_nav">
                <ul class="list-unstyled">
                    @if (PreArticle != null)
                    {
                        <li><span>上一篇:</span>@Html.ActionLink(PreArticle.Title,"Details", new { id = PreArticle.ArticleID})
                    @*<a href="#">Python对象的使用</a>*@</li>
                    }
                    
                    @if (NextArticle != null)
                    {
                        <li><span>下一篇:</span>@Html.ActionLink(NextArticle.Title, "Details", new { id = NextArticle.ArticleID })
                    @*<a href="#">Python对象的使用</a>*@</li>
                    }

                    @*<li><span>下一篇:</span><a href="#">Python中字典的使用</a></li>*@
                </ul>
            </div>
        </div>
        <div class="col-sm-3 col-sm-offset-1">

            <div class="sidebar-module">
                <h4>分类</h4>
                <!--  分部视图 -->
                @Html.Action("SideBar", "Category")
            </div>
        </div>
    </div>
</div>